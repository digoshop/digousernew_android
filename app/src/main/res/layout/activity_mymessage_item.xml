<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_messagetype"
            android:layout_width="@dimen/base_dimen_10"
            android:layout_height="@dimen/base_dimen_10"
            android:layout_marginLeft="@dimen/base_dimen_14"
            android:layout_marginTop="@dimen/base_dimen_14"
            android:background="@drawable/xx_dian"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_dimen_20"
            android:id="@+id/re_message_title">

            <ImageView
                android:id="@+id/iv_messageicon"
                android:layout_width="@dimen/base_dimen_80"
                android:layout_height="@dimen/base_dimen_80"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:layout_marginRight="@dimen/base_dimen_20" />

            <TextView
                android:id="@+id/tv_mymessage_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_messageicon"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="18"
                android:text="消息title"
                android:textColor="#000000"
                android:textSize="@dimen/base_dimen_30" />

            <LinearLayout
                android:id="@+id/lin_messitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_messageicon"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mymessage_itme_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="12"
                    android:text="消息店名"
                    android:textColor="#C6C6C6"
                    android:textSize="@dimen/base_dimen_24" />

                <TextView
                    android:id="@+id/tv_mymessage_itme_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息类型"
                    android:textColor="#C6C6C6"
                    android:textSize="@dimen/base_dimen_24" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_below="@+id/re_message_title"
            android:id="@+id/tv_mymessage_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_140"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:text="创建时间"
            android:textColor="#C6C6C6"
            android:textSize="@dimen/base_dimen_24" />

    </RelativeLayout>


</LinearLayout>