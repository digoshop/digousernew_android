<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/base_dimen_560"
        android:layout_height="@dimen/base_dimen_360"
        android:layout_centerInParent="true"
        android:background="@drawable/makesure_sales"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re_salechange_dialogtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_26">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:text="兑换确认"
                android:textColor="@color/yellow"
                android:textSize="@dimen/base_dimen_36" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_pointsale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/re_salechange_dialogtitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:text="此次兑换您将消费  币"
            android:textColor="#00A3F0"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/tv_sale_dialog1"
            android:layout_width="@dimen/base_dimen_470"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pointsale"
            android:layout_marginLeft="@dimen/base_dimen_44"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:text="用户兑换成功的商品将自动收录在“我的商品”中,相关信息请留意查看"
            android:textColor="#454545"
            android:textSize="@dimen/base_dimen_24" />

        <TextView
            android:id="@+id/tv_salechange_moreproduct"
            android:layout_width="@dimen/base_dimen_160"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_below="@id/tv_sale_dialog1"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:layout_marginLeft="@dimen/base_dimen_80"
            android:layout_marginTop="@dimen/base_dimen_40"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/tv_salechange_mygift"
            android:layout_width="@dimen/base_dimen_160"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_sale_dialog1"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:layout_marginRight="@dimen/base_dimen_80"
            android:layout_marginTop="@dimen/base_dimen_40"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/base_dimen_30" />

    </RelativeLayout>
</RelativeLayout>