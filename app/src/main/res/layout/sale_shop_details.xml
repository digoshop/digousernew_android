<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/in_titile_bar"
                layout="@layout/title_bar_include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true" />

            <ScrollView
                android:id="@+id/sv_saledetailaty"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <com.youth.banner.Banner
                            android:id="@+id/banner"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:indicator_width="@dimen/base_dimen_15"
                            app:indicator_height="@dimen/base_dimen_15"
                            app:indicator_margin="@dimen/base_dimen_5"
                            app:indicator_drawable_selected="@drawable/a_shape_banner_lan"
                            app:indicator_drawable_unselected="@drawable/a_shape_banner_white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_1"
                        android:background="@color/white"
                        android:padding="@dimen/base_dimen_16">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="TextView"
                                android:textColor="#454545"
                                android:textSize="@dimen/base_dimen_32" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/base_dimen_6"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="币"
                                    android:textColor="#454545"
                                    android:textSize="@dimen/base_dimen_30" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/base_dimen_20"
                                    android:textColor="#a7a7a7"
                                    android:textSize="@dimen/base_dimen_30" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/base_dimen_6"
                                android:ellipsize="end"
                                android:maxEms="14"
                                android:singleLine="true"
                                android:text="@string/sale_shop_shuxing"
                                android:textColor="#a7a7a7"
                                android:textSize="@dimen/base_dimen_30" />

                            <TextView
                                android:id="@+id/textViewnow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/base_dimen_6"
                                android:textColor="#a7a7a7"
                                android:textSize="@dimen/base_dimen_30" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/base_dimen_6"
                                android:text="@string/sale_shop_lost"
                                android:textColor="#a7a7a7"
                                android:textSize="@dimen/base_dimen_30" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/base_dimen_6"
                                android:text="@string/sale_shop_end"
                                android:textColor="#a7a7a7"
                                android:textSize="@dimen/base_dimen_30" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_1"
                        android:background="@color/white"
                        android:padding="@dimen/base_dimen_16">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/base_dimen_10"
                                android:gravity="center_vertical"
                                android:text="TextView"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/base_dimen_32" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_bbxq_icon_dingwei"
                                    android:layout_width="@dimen/base_dimen_36"
                                    android:layout_height="@dimen/base_dimen_36"
                                    android:background="@drawable/bbxq_icon_dingwei" />

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/base_dimen_1"
                                    android:gravity="center_vertical"
                                    android:paddingTop="@dimen/base_dimen_1"
                                    android:text="TextView"
                                    android:textColor="#454545"
                                    android:textSize="@dimen/base_dimen_30" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_sale_shop_detail"
                            android:layout_width="@dimen/base_dimen_180"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/base_dimen_10"
                            android:background="@drawable/sale_shop_go"
                            android:padding="@dimen/base_dimen_6">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="@dimen/base_dimen_36"
                                android:layout_height="@dimen/base_dimen_36"
                                android:layout_marginLeft="@dimen/base_dimen_14"
                                android:src="@drawable/bbxq_icon_dianpu" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/sale_shop_go"
                                android:textColor="#454545"
                                android:textSize="@dimen/base_dimen_22" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/main_radio"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/base_dimen_100"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/shopdetails"
                                style="@style/score_change"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/base_dimen_12"
                                android:text="@string/sale_shop_detail"
                                android:textColor="@drawable/selecter_sale"
                                android:textSize="@dimen/base_dimen_28" />

                            <RadioButton
                                android:id="@+id/shoprule"
                                style="@style/yuming"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/base_dimen_12"
                                android:text="@string/sale_shop_rule"
                                android:textColor="@drawable/selecter_sale"
                                android:textSize="@dimen/base_dimen_28" />

                            <RadioButton
                                android:id="@+id/shophistory"
                                style="@style/score_change"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/base_dimen_12"
                                android:text="@string/sale_shop_history"
                                android:textColor="@drawable/selecter_sale"
                                android:textSize="@dimen/base_dimen_28" />
                        </RadioGroup>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_marginTop="@dimen/base_dimen_1"
                            android:layout_weight="1.0"></FrameLayout>

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.0"
                            android:visibility="gone"></TabWidget>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </TabHost>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_110"
        android:layout_alignParentBottom="true"
        android:background="#FAFAFA"
        android:padding="@dimen/base_dimen_16">

        <View
            android:id="@+id/v_sale_shop_detail_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="#E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/v_sale_shop_detail_line"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#454545"

                android:textSize="@dimen/base_dimen_24" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="#454545"
                android:textSize="@dimen/base_dimen_24"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="@dimen/base_dimen_160"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/base_dimen_20"
                android:background="#00A0E9"
                android:gravity="center"
                android:text="@string/sale_score_change_sure"
                android:textSize="@dimen/base_dimen_30"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>