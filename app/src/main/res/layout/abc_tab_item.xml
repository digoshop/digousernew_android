<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="@dimen/base_dimen_10"
    android:paddingBottom="@dimen/base_dimen_10"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tab_img"
        android:layout_width="@dimen/base_dimen_55"
        android:layout_height="@dimen/base_dimen_55"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_tab_tv"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/base_dimen_24"
        android:textColor="@drawable/hom_tab_text" />

</LinearLayout>