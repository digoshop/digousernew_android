<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:padding="@dimen/base_dimen_20">

    <RelativeLayout
        android:id="@+id/re_couponleft"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_180"
        android:background="@drawable/shape_lan">

        <RelativeLayout
            android:id="@+id/re_coupon_lefta"
            android:layout_width="@dimen/base_dimen_70"
            android:layout_height="match_parent"
            android:background="@drawable/a_coupon_dai_left_a">

            <TextView
                android:id="@+id/tv_coupon_item_bg_ctid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_18"
                android:ems="1"
                android:textColor="@color/white_text"
                android:textSize="@dimen/base_dimen_34" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_coupon_leftb"
            android:layout_width="@dimen/base_dimen_180"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/re_couponright"
            android:layout_toRightOf="@+id/re_coupon_lefta"
            android:background="@color/a_coupon_zhea">
            <LinearLayout
                android:id="@+id/lin_coupon_cbcbalin_daijin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/base_dimen_15"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_coupon_item_money_cbca_daijin"
                    android:layout_width="@dimen/base_dimen_100"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/base_dimen_60"
                    android:gravity="center"
                    android:textColor="@color/a_coupon_lefb"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/a_coupon_lefb"
                    android:textSize="@dimen/base_dimen_30" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_coupon_cbcbalin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon_item_money_cbca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/base_dimen_60"
                    android:textColor="@color/white_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_coupon_item_money_cbca_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/base_dimen_30" />
            </LinearLayout>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_coupon_item_tiaojian_cbcf"
                android:layout_width="@dimen/base_dimen_200"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_coupon_cbcbalin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:text="使用条件"
                android:textColor="@color/white_text"
                android:textSize="@dimen/base_dimen_22" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/re_couponactive_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_toRightOf="@+id/re_coupon_leftb"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupon_item_cbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="店铺名字"
                android:textColor="#333333"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_coupon_item_operates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_dimen_10"
                android:layout_marginTop="@dimen/base_dimen_30"
                android:ellipsize="end"
                android:maxEms="9"
                android:singleLine="true"
                android:text="全场通用"
                android:textColor="#666666"
                android:textSize="@dimen/base_dimen_22" />

            <TextView
                android:id="@+id/tv_coupon_item_time_cbvsd_cbved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用期限"
                android:textColor="#bbbbbb"
                android:textSize="@dimen/base_dimen_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/base_dimen_196"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="@dimen/base_dimen_10"
           >


            <LinearLayout
                android:id="@+id/lin_shengyulin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_10"
                    android:text="剩"
                    android:textColor="#999999"
                    android:textSize="@dimen/base_dimen_20" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_coupon_item_cbsnu"
                    android:layout_width="@dimen/base_dimen_120"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_4"
                    android:layout_marginRight="@dimen/base_dimen_4"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textColor="@color/a_coupon_lefc"
                    android:textSize="@dimen/base_dimen_60" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/base_dimen_10"
                    android:text="张"
                    android:textColor="#999999"
                    android:textSize="@dimen/base_dimen_20" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_couponactive_dazhe_dianji1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_shengyulin"
                android:layout_centerHorizontal="true"
                android:background="@drawable/a_shape_couponred"
                android:paddingBottom="@dimen/base_dimen_4"
                android:paddingLeft="@dimen/base_dimen_24"
                android:paddingRight="@dimen/base_dimen_24"
                android:paddingTop="@dimen/base_dimen_4"
                android:text="领取"
                android:textColor="#ffffff"
                android:textSize="@dimen/base_dimen_24" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_islingqu"
            android:layout_width="@dimen/base_dimen_160"
            android:layout_height="@dimen/base_dimen_121"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/gouyouhui_yiguoqi"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>