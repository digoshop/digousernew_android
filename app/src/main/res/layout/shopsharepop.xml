<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_30"
            android:text="分享到"
            android:textColor="#363636"
            android:textSize="@dimen/base_dimen_30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:background="#f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lin_shareshop_weixinuser"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/base_dimen_120"
                    android:layout_height="@dimen/base_dimen_120"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/share_user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_25"
                    android:text="微信好友"
                    android:textColor="#363636"
                    android:textSize="@dimen/base_dimen_25" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/lin_shareshop_weixincri"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/base_dimen_120"
                    android:layout_height="@dimen/base_dimen_120"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/share_cri" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/base_dimen_25"
                    android:text="微信朋友圈"
                    android:textColor="#363636"
                    android:textSize="@dimen/base_dimen_25" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_marginTop="@dimen/base_dimen_30"
            android:background="#f5f5f5" />

        <Button
            android:id="@+id/btn_shareshop_pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_90"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:layout_marginTop="@dimen/base_dimen_30"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:text="取  消"
            android:textColor="#363636"
            android:textSize="@dimen/base_dimen_35" />
    </LinearLayout>

</RelativeLayout>