<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_home_saleaty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:layout_gravity="center"
    android:background="#f5f5f5"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_zhana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="站"
        android:textSize="@dimen/base_dimen_20"
        android:visibility="invisible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/tv_zhanb"
        android:layout_toRightOf="@+id/tv_zhana"
        android:background="@drawable/a_shape_bai_c"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/base_dimen_12"
        android:layout_marginTop="@dimen/base_dimen_12"
        android:paddingBottom="@dimen/base_dimen_12"
        android:paddingTop="@dimen/base_dimen_12">

        <ImageView
            android:layout_width="@dimen/base_dimen_140"
            android:layout_height="@dimen/base_dimen_40"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sale_titile"
            android:gravity="center" />

        <View
            android:layout_width="@dimen/default_line_width"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/base_dimen_17"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:layout_marginTop="@dimen/base_dimen_17"
            android:background="#c1d0dd"
            android:gravity="center" />


        <ImageView
            android:layout_width="@dimen/base_dimen_62"
            android:layout_height="@dimen/base_dimen_30"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:background="@drawable/tuijian"
            android:gravity="center" />

        <!-- 上下滚动的TextView -->

        <com.digoshop.app.module.home.view.AutoVerticalScrollTextView
            android:id="@+id/textview_auto_roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_zhanb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="站"
        android:textSize="@dimen/base_dimen_20"
        android:visibility="invisible" />
</RelativeLayout>