<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/lLayout_coupon_category"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/base_dimen_10">

        <TextView
            android:id="@+id/tv_arrountshop_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部分类"
            android:textColor="@color/black_text"
            android:textSize="@dimen/base_dimen_30" />

        <ImageView
            android:id="@+id/iv_arrountshop_category"
            android:layout_width="@dimen/base_dimen_20"
            android:layout_height="@dimen/base_dimen_20"
            android:layout_alignBottom="@+id/tv_arrountshop_category"
            android:layout_marginBottom="@dimen/base_dimen_6"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_toRightOf="@+id/tv_arrountshop_category"
            android:src="@drawable/arrount_iv_arrowdown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lLayout_coupon_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/base_dimen_10">

        <TextView
            android:id="@+id/tv_arrountshop_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部品类"
            android:textColor="@color/black_text"
            android:textSize="@dimen/base_dimen_30" />

        <ImageView
            android:id="@+id/iv_arrountshop_area"
            android:layout_width="@dimen/base_dimen_20"
            android:layout_height="@dimen/base_dimen_20"
            android:layout_alignBottom="@+id/tv_arrountshop_area"
            android:layout_marginBottom="@dimen/base_dimen_6"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_toRightOf="@+id/tv_arrountshop_area"
            android:src="@drawable/arrount_iv_arrowdown" />
    </RelativeLayout>

</LinearLayout>