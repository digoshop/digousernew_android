<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_text"
            android:padding="@dimen/base_dimen_10" >

            <RelativeLayout
                android:id="@+id/Rl_shapping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_storedeatil_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="朝阳区太阳宫七圣中街12号院"
                    android:textColor="#c4c4c4"
                    android:textSize="@dimen/base_dimen_28" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="商场地址"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_dimen_30" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Rl_shapping"
                android:layout_marginTop="@dimen/base_dimen_20" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="@dimen/base_dimen_10"
                    android:text="周日-周四10:00-22:00"
                    android:textColor="#c4c4c4"
                    android:textSize="@dimen/base_dimen_28"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="营业时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_dimen_30" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/base_dimen_33"
                    android:layout_height="@dimen/base_dimen_33"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_toRightOf="@+id/textView3"
                    android:src="@drawable/icon_time"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_storedetail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="周五-周六10:00-22:00"
                    android:textColor="#c4c4c4"
                    android:textSize="@dimen/base_dimen_28" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rl_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Rl_time"
                android:layout_marginTop="@dimen/base_dimen_20" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务电话"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_dimen_30" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/base_dimen_34"
                    android:layout_height="@dimen/base_dimen_34"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_toRightOf="@+id/textView7"
                    android:src="@drawable/icon_small_phone"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_storedetail_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text=""
                    android:textColor="#c4c4c4"
                    android:textSize="@dimen/base_dimen_28" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white_text"
        android:orientation="vertical"
        android:padding="@dimen/base_dimen_10" >

        <RelativeLayout
            android:id="@+id/re_storegps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="查看地图"
                android:textColor="#1f97d6"
                android:textSize="@dimen/base_dimen_28" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/base_dimen_37"
                android:layout_height="@dimen/base_dimen_33"
                android:layout_toLeftOf="@id/textView8"
                android:background="@drawable/icon_map" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_storedetail_tel"
                android:layout_width="@dimen/base_dimen_74"
                android:layout_height="@dimen/base_dimen_74"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_phone" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/iv_storedetail_tel"
                android:gravity="center"
                android:text="拨打132次"
                android:textSize="@dimen/base_dimen_28" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>