<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="@dimen/base_dimen_86"
        android:background="@color/title_bar_bg">

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="@dimen/base_dimen_48"
            android:layout_height="@dimen/base_dimen_48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@drawable/title_return" />

        <RelativeLayout
            android:id="@+id/re_couponactive_type"
            android:layout_width="@dimen/base_dimen_320"
            android:layout_height="@dimen/base_dimen_70"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/gouyouhui_banner2">

            <TextView
                android:id="@+id/tv_couponactive_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_24"
                android:text="领优惠券"
                android:textColor="#000000"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_couponactive_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_24"
                android:text="优惠活动"
                android:textColor="#ffffff"
                android:textSize="@dimen/base_dimen_28" />
        </RelativeLayout>
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/store_couponaty_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>