<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base_dimen_560"
    android:layout_height="@dimen/base_dimen_160"
    android:background="@drawable/makesure_sales"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginLeft="@dimen/base_dimen_60"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:text="反馈商家问题"
        android:textColor="@color/title_bar_bg"
        android:textSize="@dimen/base_dimen_40" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_3"
        android:background="@color/title_bar_bg" />

    <ListView
        android:id="@+id/lv_shopClassone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:choiceMode="singleChoice"
        android:clickable="false"
        android:divider="#cccccc"
        android:dividerHeight="@dimen/base_dimen_1"
        android:fastScrollEnabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@null" />


</LinearLayout>