<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_counte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20">

        <ImageView
            android:id="@+id/iv_scov"
            android:layout_width="@dimen/base_dimen_120"
            android:layout_height="@dimen/base_dimen_120"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:scaleType="fitXY"
            android:src="@drawable/defaultseekservice" />


        <TextView
            android:id="@+id/tv_sn"
            android:layout_width="@dimen/base_dimen_410"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_toRightOf="@id/iv_scov"
            android:text="服务店铺"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/tv_cuttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/base_dimen_20"
            android:layout_toRightOf="@+id/iv_scov"
            android:text="日期"
            android:textColor="#D4D4D4"
            android:textSize="@dimen/base_dimen_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zhongping"
                android:textSize="@dimen/base_dimen_30" />

            <TextView
                android:id="@+id/tv_csreply_item_mst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_6"
                android:text="已标记"
                android:textColor="#e39800"
                android:textSize="@dimen/base_dimen_20" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_counte"
        android:layout_margin="10dp"
        android:background="#eeeeee"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_dimen_20"
            android:background="@color/white"
            android:paddingLeft="@dimen/base_dimen_20"
            android:paddingTop="@dimen/base_dimen_20"
            android:paddingBottom="@dimen/base_dimen_20"
            android:textSize="@dimen/base_dimen_30"
            android:text="定制要求：1.5P的客户空调"
            android:textColor="#D4D4D4" />

        <LinearLayout
            android:id="@+id/lin_huifulinurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_20"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_huifuurl1"
                android:layout_width="@dimen/base_dimen_110"
                android:layout_height="@dimen/base_dimen_110"
                android:scaleType="centerCrop"
                android:background="@drawable/defaultseekservice"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_huifuurl2"
                android:layout_width="@dimen/base_dimen_110"
                android:layout_height="@dimen/base_dimen_110"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:background="@drawable/defaultseekservice"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_huifuurl3"
                android:layout_width="@dimen/base_dimen_110"
                android:layout_height="@dimen/base_dimen_110"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:scaleType="centerCrop"
                android:background="@drawable/defaultseekservice"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_huifuurl4"
                android:layout_width="@dimen/base_dimen_110"
                android:layout_height="@dimen/base_dimen_110"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:scaleType="centerCrop"
                android:background="@drawable/defaultseekservice"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_huifuurl5"
                android:layout_width="@dimen/base_dimen_110"
                android:layout_height="@dimen/base_dimen_110"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:scaleType="centerCrop"
                android:background="@drawable/defaultseekservice"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>