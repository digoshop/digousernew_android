<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/a_shape_maker"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/tv_shopmaker"
        android:text="店铺名字"
        android:padding="@dimen/base_dimen_10"
        android:textSize="@dimen/base_dimen_30" />

    <ImageView
        android:layout_marginTop="@dimen/base_dimen_2"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/base_dimen_40"
        android:layout_height="@dimen/base_dimen_49"
        android:background="@drawable/location_marker" />
</LinearLayout>
