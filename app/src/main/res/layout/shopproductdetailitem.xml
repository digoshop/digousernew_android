<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_shopproductimg"
        android:layout_width="@dimen/base_dimen_240"
        android:layout_height="@dimen/base_dimen_240"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/kcx_001" />

    <TextView
        android:id="@+id/tv_newproductshopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_4"
        android:textColor="#000000"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/base_dimen_4"
        android:textSize="@dimen/base_dimen_26" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/base_dimen_4"
        android:layout_marginRight="@dimen/base_dimen_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_newproductmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#00A0E9"
            android:textSize="@dimen/base_dimen_26" />

        <TextView
            android:id="@+id/tv_newproduct_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#00A0E9"
            android:textSize="@dimen/base_dimen_26" />


    </RelativeLayout>

</LinearLayout>