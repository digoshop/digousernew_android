<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/re_custom_service_tab_good"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_10" >

            <ImageView
                android:id="@+id/iv_custom_sercvice_tab_good"
                android:layout_width="@dimen/base_dimen_58"
                android:layout_height="@dimen/base_dimen_58"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dzfw_sp_xuqiu" />

            <TextView
                android:id="@+id/tv_custom_service_tab_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_custom_sercvice_tab_good"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_6"
                android:text="@string/my_custom_tab_1"
                android:textSize="@dimen/base_dimen_30"
                android:textColor="@color/custom_tab_blue" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:background="#D9D9D9"
            android:gravity="center" />

        <TextView
            android:id="@+id/view_custom_service_line_good"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:textSize="@dimen/base_dimen_30"
            android:layout_alignParentBottom="true"
            android:background="@color/custom_tab_blue"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_custom_service_tab_good3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_10" >

            <ImageView
                android:id="@+id/iv_custom_sercvice_tab_good3"
                android:layout_width="@dimen/base_dimen_58"
                android:layout_height="@dimen/base_dimen_58"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dzfw_fw_goumai" />

            <TextView
                android:id="@+id/tv_custom_service_tab_good3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_custom_sercvice_tab_good3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_6"
                android:textSize="@dimen/base_dimen_30"
                android:text="@string/my_custom_tab_2"
                android:textColor="@color/custom_tab_orange" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:background="#D9D9D9"
            android:gravity="center" />

        <TextView
            android:id="@+id/view_custom_service_line_good3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:textSize="@dimen/base_dimen_30"
            android:layout_alignParentBottom="true"
            android:background="@color/custom_tab_orange"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_custom_service_tab_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_10" >

            <ImageView
                android:id="@+id/iv_custom_sercvice_tab_service"
                android:layout_width="@dimen/base_dimen_58"
                android:layout_height="@dimen/base_dimen_58"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dzfw_sp_huifu" />

            <TextView
                android:id="@+id/tv_custom_service_tab_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_custom_sercvice_tab_service"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_6"
                android:textSize="@dimen/base_dimen_30"
                android:text="@string/my_custom_tab_3"
                android:textColor="@color/custom_tab_blue" />
        </RelativeLayout>

        <TextView
            android:id="@+id/view_custom_service_line_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_alignParentBottom="true"
            android:background="@color/custom_tab_blue"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout>