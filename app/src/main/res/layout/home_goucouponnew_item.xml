<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:padding="@dimen/base_dimen_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_200"
        android:background="@drawable/shape_white">

        <RelativeLayout
            android:id="@+id/re_couponleft"
            android:layout_width="@dimen/base_dimen_72"
            android:layout_height="@dimen/base_dimen_200"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_lan_nlan">

            <TextView
                android:id="@+id/tv_coupon_item_bg_ctid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ems="1"
                android:text="折扣券"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_couponmiddle"
            android:layout_width="@dimen/base_dimen_172"
            android:layout_height="@dimen/base_dimen_200"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/re_couponleft"
            android:background="@color/tv_coupon_nqlan">

            <LinearLayout
                android:id="@+id/lin_middle_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon_item_money_cbca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/tv_coupon_nlan"
                    android:textSize="@dimen/base_dimen_80" />

                <TextView
                    android:id="@+id/tv_coupon_item_money_cbca_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/tv_coupon_nlan"
                    android:textSize="@dimen/base_dimen_26" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_coupon_item_tiaojian_cbcf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_middle_coupon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_5"
                android:text="使用条件"
                android:textColor="@color/tv_coupon_nlan"
                android:textSize="@dimen/base_dimen_22" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/base_dimen_200"
            android:layout_height="@dimen/base_dimen_200"
            android:layout_marginBottom="@dimen/base_dimen_20"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_toRightOf="@+id/re_couponmiddle"
            android:layout_toLeftOf="@+id/lin_rigint_coupon"
            android:paddingLeft="@dimen/base_dimen_20">

            <TextView
                android:id="@+id/tv_coupon_item_cbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="店铺名字"
                android:textColor="#6f6f6f"
                android:textSize="@dimen/base_dimen_30" />

            <TextView
                android:id="@+id/tv_coupon_item_operates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_coupon_item_time_cbvsd_cbved"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxEms="9"
                android:paddingRight="@dimen/base_dimen_12"
                android:singleLine="true"
                android:text="适用品类"
                android:textColor="#858585"
                android:textSize="@dimen/base_dimen_26" />

            <TextView
                android:id="@+id/tv_coupon_item_time_cbvsd_cbved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="使用期限"
                android:textColor="#d2d2d2"
                android:textSize="@dimen/base_dimen_26" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_rigint_coupon"
            android:layout_width="@dimen/base_dimen_150"
            android:layout_height="@dimen/base_dimen_200"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_shengyulin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_44"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_10"
                    android:text="剩"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/base_dimen_24" />

                <TextView
                    android:id="@+id/tv_coupon_item_cbsnu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_4"
                    android:layout_marginRight="@dimen/base_dimen_4"
                    android:ellipsize="end"
                    android:maxEms="3"
                    android:singleLine="true"
                    android:text="90"
                    android:textColor="#e34f2c"
                    android:textSize="@dimen/base_dimen_60" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/base_dimen_10"
                    android:text="张"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/base_dimen_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_couponactive_dazhe_dianji1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_shengyulin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textred_cou"
                android:paddingBottom="@dimen/base_dimen_6"
                android:paddingLeft="@dimen/base_dimen_12"
                android:paddingRight="@dimen/base_dimen_12"
                android:paddingTop="@dimen/base_dimen_6"
                android:text="领取"
                android:textColor="@color/white_text"
                android:textSize="@dimen/base_dimen_20" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_islingqu"
            android:layout_width="@dimen/base_dimen_140"
            android:layout_height="@dimen/base_dimen_120"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:layout_marginTop="-5dp"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>