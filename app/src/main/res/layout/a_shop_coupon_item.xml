<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_dimen_120"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/iv_shop_coupona"
        android:layout_width="@dimen/base_dimen_20"
        android:layout_height="@dimen/base_dimen_120"
        android:layout_alignParentLeft="true"
        android:background="@color/transparent" />


    <RelativeLayout
        android:id="@+id/re_ashop_couponbg"
        android:layout_width="@dimen/base_dimen_250"
        android:layout_height="@dimen/base_dimen_120"
        android:layout_toRightOf="@+id/iv_shop_coupona"
        android:background="@drawable/a_shop_coupon_dai">

        <TextView
            android:id="@+id/tv_shop_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_marginRight="@dimen/base_dimen_26"
            android:ems="1"
            android:text="代金券"
            android:textColor="@color/white_text"
            android:textSize="@dimen/base_dimen_28" />

        <LinearLayout
            android:id="@+id/lin_shop_coupon_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_4"
            android:layout_toRightOf="@+id/tv_shop_coupon_type"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="折扣率"
                android:textColor="@color/white_text"
                android:textSize="@dimen/base_dimen_50" />

            <TextView
                android:id="@+id/tv_shop_coupon_price_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/white_text"
                android:textSize="@dimen/base_dimen_32" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_shop_coupon_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_shop_coupon_lin"
            android:layout_toRightOf="@+id/tv_shop_coupon_type"
            android:background="@drawable/a_shape_couponbai"
            android:paddingLeft="@dimen/base_dimen_30"
            android:paddingRight="@dimen/base_dimen_30"
            android:text="领取"
            android:textColor="@color/white_text"
            android:textSize="@dimen/base_dimen_28" />
    </RelativeLayout>
</RelativeLayout>