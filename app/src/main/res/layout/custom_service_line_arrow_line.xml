<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/custom_service_line1"
        android:layout_width="12dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="#E5D8B6" />

    <ImageView
        android:id="@+id/custom_service_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/custom_service_line1"
        android:src="@drawable/dzfw_fw_jiantou" />

    <View
        android:id="@+id/custom_service_line2"
        android:layout_width="12dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/custom_service_arrow"
        android:background="#E5D8B6" />

</RelativeLayout>