<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_threeicon"
            android:layout_width="@dimen/base_dimen_168"
            android:layout_height="@dimen/base_dimen_112"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_threename"
            android:layout_marginBottom="@dimen/base_dimen_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/base_dimen_10"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:text="三级类"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="@dimen/base_dimen_24" />
    </LinearLayout>

</LinearLayout>