<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="#FEE6DC" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_Fifty"
            android:layout_marginTop="47dp"
            android:background="@color/orange"
            android:paddingLeft="25dp"
            android:text="有效时间至：2016.1.25  23:59:59" />

        <TextView
            android:id="@+id/tv_Fifty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="5dp"
            android:text="50"
            android:textColor="#1B95D3"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_Fifty"
            android:layout_alignBottom="@+id/tv_Fifty"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:text="￥"
            android:textColor="#1B95D3"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/tv_Fifty"
            android:layout_marginTop="14dp"
            android:background="@drawable/textview_style"
            android:gravity="center"
            android:text="满  200元  使用"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_Fifty"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@+id/tv_Fifty"
            android:text="代金券"
            android:textColor="@color/orange" />
    </RelativeLayout>

</LinearLayout>