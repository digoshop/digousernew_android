<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_30">

        <ImageView
            android:id="@+id/iv_user_com_icon"
            android:layout_width="@dimen/base_dimen_50"
            android:layout_height="@dimen/base_dimen_50"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_toRightOf="@+id/iv_user_com_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_comname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/base_dimen_22" />

            <TextView
                android:id="@+id/tv_user_comtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b4b4b4"
                android:textSize="@dimen/base_dimen_16" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_user_com_type"
            android:layout_width="@dimen/base_dimen_28"
            android:layout_height="@dimen/base_dimen_28"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/base_dimen_3"
            android:background="@drawable/a_shopcoment_bad"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_user_comtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:layout_toLeftOf="@+id/iv_user_com_type"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_user_comtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_90"
        android:layout_marginRight="@dimen/base_dimen_40"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:textColor="#464646"
        android:textSize="@dimen/base_dimen_28" />

    <LinearLayout
        android:id="@+id/lin_comment_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_130"
        android:layout_marginBottom="@dimen/base_dimen_10"
        android:layout_marginLeft="@dimen/base_dimen_90"
        android:layout_marginRight="@dimen/base_dimen_40"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_comment1"
            android:layout_width="@dimen/base_dimen_120"
            android:layout_height="@dimen/base_dimen_120"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:scaleType="centerCrop"
            android:src="@drawable/kcx_001"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_comment2"
            android:layout_width="@dimen/base_dimen_120"
            android:layout_height="@dimen/base_dimen_120"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:scaleType="centerCrop"
            android:src="@drawable/kcx_001"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_comment3"
            android:layout_width="@dimen/base_dimen_120"
            android:layout_height="@dimen/base_dimen_120"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:scaleType="centerCrop"
            android:src="@drawable/kcx_001"
            android:visibility="gone" />
    </LinearLayout>

    <com.github.library.bubbleview.BubbleTextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tv_reply_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginLeft="@dimen/base_dimen_90"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:padding="@dimen/base_dimen_20"
        android:text=""
        android:textColor="#666666"
        android:textSize="@dimen/base_dimen_22"
        app:angle="@dimen/base_dimen_16"
        app:arrowCenter="false"
        app:arrowHeight="@dimen/base_dimen_20"
        app:arrowLocation="top"
        app:arrowPosition="@dimen/base_dimen_28"
        app:arrowWidth="@dimen/base_dimen_25"
        app:bubbleColor="#f5f5f5" />

</LinearLayout>