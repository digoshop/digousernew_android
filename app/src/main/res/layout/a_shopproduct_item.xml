<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_shopn_pro_img"
        android:layout_width="@dimen/base_dimen_333"
        android:layout_height="@dimen/base_dimen_333"
        android:background="@drawable/defaluttfang"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_dimen_33"
        android:layout_marginBottom="@dimen/base_dimen_4"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_istypebg"
            android:layout_width="@dimen/base_dimen_50"
            android:layout_height="@dimen/base_dimen_28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:background="@drawable/a_shop_dui_bg"
            android:gravity="center"
            android:text="兑换"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:textColor="@color/white_text"
            android:textSize="@dimen/base_dimen_20" />

        <TextView
            android:id="@+id/tv_shopproduct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_27" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_50"
        android:layout_marginBottom="@dimen/base_dimen_10"
        android:layout_marginLeft="@dimen/base_dimen_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lin_shopn_pro_car"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_shopproduct_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:maxEms="6"
                android:maxLines="1"
                android:textColor="#f73245"
                android:textSize="@dimen/base_dimen_29" />


            <TextView
                android:id="@+id/tv_shopproduct_dbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:textColor="#f73245"
                android:textSize="@dimen/base_dimen_24"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_shopproduct_r_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/base_dimen_4"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_24"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_shopn_pro_car"
            android:layout_width="@dimen/base_dimen_43"
            android:layout_height="@dimen/base_dimen_43"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_15"
            android:background="@drawable/a_shop_duibg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/base_dimen_30"
                android:layout_height="@dimen/base_dimen_30"
                android:layout_gravity="center"
                android:background="@drawable/ashop_dui"
                android:scaleType="centerCrop" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>