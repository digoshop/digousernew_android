<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/re_custom_service_tab_good"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/iv_custom_sercvice_tab_good"
                android:layout_width="@dimen/base_dimen_45"
                android:layout_height="@dimen/base_dimen_45"
                android:layout_centerVertical="true"
                android:background="@drawable/dzfw_caigoutb2" />

            <TextView
                android:id="@+id/tv_custom_service_tab_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:layout_toRightOf="@id/iv_custom_sercvice_tab_good"
                android:text="@string/custom_tab_good"
                android:textSize="@dimen/base_dimen_30"
                android:textColor="@color/custom_tab_yellow" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:background="#D9D9D9"
            android:gravity="center" />

        <TextView
            android:id="@+id/view_custom_service_line_good"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_alignParentBottom="true"
            android:background="@color/custom_tab_yellow"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_custom_service_tab_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/iv_custom_sercvice_tab_service"
                android:layout_width="@dimen/base_dimen_45"
                android:layout_height="@dimen/base_dimen_45"
                android:layout_centerVertical="true"
                android:background="@drawable/dzfw_fuwutb" />

            <TextView
                android:id="@+id/tv_custom_service_tab_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:layout_toRightOf="@id/iv_custom_sercvice_tab_service"
                android:text="@string/custom_tab_service"
                android:textSize="@dimen/base_dimen_30"
                android:textColor="@color/custom_tab_hui" />
        </RelativeLayout>

        <TextView
            android:id="@+id/view_custom_service_line_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/base_dimen_30"
            android:background="@color/custom_tab_hui"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout>