<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_home_saleproduct_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/base_dimen_20"
    android:layout_marginTop="@dimen/base_dimen_20"
    android:background="#ffffff"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_10"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_dimen_65"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_zsp"
            android:layout_width="@dimen/base_dimen_34"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/base_dimen_5"
            android:background="@drawable/l_goodshop" />


        <TextView
            android:id="@+id/tv_home_zsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="店铺街"
            android:textColor="#ff9948"
            android:textSize="@dimen/base_dimen_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_12"
            android:text="商家认证值得信赖"
            android:textColor="#cbcbcb"
            android:textSize="@dimen/base_dimen_20" />


    </LinearLayout>


    <com.digoshop.app.module.arrountshops.view.PullableListView
        android:id="@+id/home_lv_commendshop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="#efefef"
        android:dividerHeight="@dimen/base_dimen_1"
        android:scrollbars="none" />
</LinearLayout>