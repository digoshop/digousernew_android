<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/base_dimen_40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/base_dimen_20"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_camera_pop_camera"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_90"
            android:background="@drawable/pop_first_selector"
            android:text="相机拍摄"
            android:textSize="@dimen/base_dimen_36" />

        <Button
            android:id="@+id/btn_camera_pop_album"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_90"
            android:background="@drawable/pop_last_selector"
            android:text="从相册选择"
            android:textSize="@dimen/base_dimen_36" />

        <Button
            android:id="@+id/btn_camera_pop_cancel"
             android:textColor="#f77931"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_90"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:background="@drawable/pop_single_selector"
            android:text="取消"
            android:textSize="@dimen/base_dimen_36" />
    </LinearLayout>

</RelativeLayout>