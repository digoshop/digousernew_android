<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bar_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_zaosp_return"
        android:layout_width="@dimen/base_dimen_48"
        android:layout_height="@dimen/base_dimen_48"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:onClick="OnTitleReturnClick"
        android:src="@drawable/title_return" />

    <RelativeLayout
        android:id="@+id/lin_search_saomao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_home_saomao"
            android:layout_width="@dimen/base_dimen_42"
            android:layout_height="@dimen/base_dimen_42"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/base_dimen_8"
            android:src="@drawable/new_scan" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/base_dimen_12"
        android:layout_toLeftOf="@id/lin_search_saomao"
        android:layout_toRightOf="@id/iv_zaosp_return"
        android:background="@drawable/ss_sous">

        <EditText
            android:id="@+id/et_homefragment_searchlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:background="@null"
            android:textSize="@dimen/base_dimen_32"
            android:hint=""
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/base_dimen_20"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@null"
             />

        <ImageView
            android:id="@+id/iv_zhaosp_searchlist_go"
            android:layout_width="@dimen/base_dimen_28"
            android:layout_height="@dimen/base_dimen_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_16"
            android:src="@drawable/search_icon_home" />
    </RelativeLayout>

</RelativeLayout>