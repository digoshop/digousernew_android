<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_store_atyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:text="活动名称"
        android:textColor="#000000"
        android:textSize="@dimen/base_dimen_30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/base_dimen_20"

        android:paddingRight="@dimen/base_dimen_20">

        <ImageView
            android:id="@+id/iv_store_atyimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/defaulhomehuan"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:paddingTop="@dimen/base_dimen_20">

        <TextView
            android:id="@+id/tv_stroe_atyshopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:maxEms="12"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:textColor="#c4c4c4"
            android:textSize="@dimen/base_dimen_26" />

        <TextView
            android:id="@+id/tv_stroe_atytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:layout_toRightOf="@+id/tv_stroe_atyshopname"
            android:textColor="#c4c4c4"
            android:textSize="@dimen/base_dimen_26" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stroe_atygps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:textColor="#c4c4c4"
                android:textSize="@dimen/base_dimen_26" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>