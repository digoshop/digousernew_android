<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/in_titile_bar"
            layout="@layout/title_bar_include"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_90">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:text="消息提醒"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_30" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_alignParentBottom="true"
            android:background="#dcdcdc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_110"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_30"
                    android:layout_toRightOf="@+id/iv_push"
                    android:text="商家消息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_dimen_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_30"
                    android:layout_marginTop="@dimen/base_dimen_4"
                    android:layout_toRightOf="@+id/iv_push"
                    android:text="禁止商家消息的推送"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_dimen_24" />

            </LinearLayout>

            <ch.ielse.view.SwitchView
                android:id="@+id/sv_shopbtn"
                android:layout_width="@dimen/base_dimen_140"
                android:layout_height="@dimen/base_dimen_70"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_40"
                app:primaryColor="@color/title_bar_bg"
                app:primaryColorDark="@color/title_bar_bg" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:background="#dcdcdc" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_110"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_30"
                    android:layout_toRightOf="@+id/iv_push"
                    android:text="系统消息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_dimen_32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_30"
                    android:layout_marginTop="@dimen/base_dimen_4"
                    android:layout_toRightOf="@+id/iv_push"
                    android:text="禁止系统消息的推送"
                    android:textColor="@color/black"
                    android:textSize="@dimen/base_dimen_24" />

            </LinearLayout>

            <ch.ielse.view.SwitchView
                android:id="@+id/sv_sysbtn"
                android:layout_width="@dimen/base_dimen_140"
                android:layout_height="@dimen/base_dimen_70"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_40"
                app:primaryColor="@color/title_bar_bg"
                app:primaryColorDark="@color/title_bar_bg" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:layout_alignParentBottom="true"

                android:background="#dcdcdc" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>