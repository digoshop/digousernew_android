<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_20"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_80"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:ellipsize="end"
            android:maxEms="12"
            android:maxLines="1"
            android:textColor="#454545"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:text="time"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/base_dimen_26" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gv_cs_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:paddingBottom="@dimen/base_dimen_40"
            android:paddingLeft="@dimen/base_dimen_30"
            android:paddingRight="@dimen/base_dimen_30"
            android:paddingTop="@dimen/base_dimen_40"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_costhis"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_140"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:background="#f8f8f8"
        android:paddingTop="@dimen/base_dimen_20">

        <ImageView
            android:id="@+id/iv_shopppi"
            android:layout_width="@dimen/base_dimen_150"
            android:layout_height="@dimen/base_dimen_100"

            android:layout_marginRight="@dimen/base_dimen_20"
            android:background="@drawable/kcx_001"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_shoppro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_shopppi"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#454545"
            android:textSize="@dimen/base_dimen_26" />
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tv_shoppro_name"
              android:layout_toRightOf="@+id/iv_shopppi"
              android:orientation="horizontal"
              android:id="@+id/lin_price">
              <TextView
                  android:id="@+id/tv_amount_a"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:textColor="#cccccc"
                  android:textSize="@dimen/base_dimen_24" />
              <TextView
                  android:id="@+id/tv_shoppro_ppr"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:textColor="#cccccc"
                  android:textSize="@dimen/base_dimen_24" />
          </LinearLayout>


        <TextView
            android:id="@+id/tv_shoppro_pat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_price"
            android:layout_toRightOf="@+id/iv_shopppi"
            android:textColor="#cccccc"
            android:textSize="@dimen/base_dimen_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_20"
            android:layout_below="@+id/iv_shopppi"
            android:background="#f8f8f8" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_80"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:background="#ffffff">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实付款："
                android:textColor="#9e9e9e"
                android:textSize="@dimen/base_dimen_26" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_4"
                android:layout_marginRight="@dimen/base_dimen_4"
                android:text="0"
                android:textColor="#f39800"
                android:textSize="@dimen/base_dimen_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/base_dimen_20"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_ping_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:background="@drawable/a_shape_ping"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/base_dimen_7">

            <ImageView
                android:id="@+id/iv_ping_type"
                android:layout_width="@dimen/base_dimen_32"
                android:layout_height="@dimen/base_dimen_30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_5"
                android:background="@drawable/ping_add"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_ping_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="添加评论"
                android:textColor="#454545"
                android:textSize="@dimen/base_dimen_24" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>