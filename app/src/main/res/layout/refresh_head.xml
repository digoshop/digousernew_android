<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    >
    <!--android:background="@color/gray" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/base_dimen_40"
        android:paddingTop="@dimen/base_dimen_40" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/pull_icon"
                android:layout_width="@dimen/base_dimen_38"
                android:layout_height="@dimen/base_dimen_62"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_120"
                android:background="@drawable/pull_icon_big111" />

            <ImageView
                android:id="@+id/refreshing_icon"
                android:layout_width="@dimen/base_dimen_32"
                android:layout_height="@dimen/base_dimen_32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_120"
                android:background="@drawable/refreshing111"
                android:visibility="gone" />

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/pull_to_refresh"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_32" />

            <ImageView
                android:id="@+id/state_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_16"
                android:layout_toLeftOf="@id/state_tv"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>