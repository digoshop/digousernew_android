<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/in_titile_bar"
        layout="@layout/title_bar_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_10"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:id="@+id/re_shopallcate_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:text="全部商品"
            android:textColor="#333333"
            android:textSize="@dimen/base_dimen_28" />

        <ImageView
            android:layout_width="@dimen/base_dimen_28"
            android:layout_height="@dimen/base_dimen_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:background="@drawable/grzx_jiantou2" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_10"
        android:background="#f5f5f5" />

    <ListView
        android:id="@+id/lv_shopn_alllcate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#f5f5f5"
        android:dividerHeight="@dimen/base_dimen_10"
        />
</LinearLayout>