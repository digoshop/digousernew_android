<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_37"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_shop_icon"
            android:layout_width="@dimen/base_dimen_120"
            android:layout_height="@dimen/base_dimen_120"
            android:background="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逛街用迪购"
                android:textColor="@color/qinahei"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物更轻松"
                android:textColor="@color/qinahei"
                android:textSize="@dimen/base_dimen_28" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_share_shop_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_38"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_shop_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="12"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"
            android:textSize="@dimen/base_dimen_30" />

        <LinearLayout
            android:id="@+id/lin_share_shop_type"
            android:layout_width="@dimen/base_dimen_54"
            android:layout_marginTop="@dimen/base_dimen_2"
            android:layout_height="@dimen/base_dimen_28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_12"
            android:background="@drawable/a_shoptype_qinayue"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_share_shop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="签约"
                android:textColor="@color/white_text"
                android:textSize="@dimen/base_dimen_22" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/base_dimen_90"
        android:layout_marginRight="@dimen/base_dimen_75"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_shop_intrduce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_68"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_65"
        android:layout_marginRight="@dimen/base_dimen_65"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="营业时间："
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />

        <TextView
            android:id="@+id/tv_share_shop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_65"
        android:layout_marginRight="@dimen/base_dimen_65"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商家电话："
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />

        <TextView
            android:id="@+id/tv_share_shop_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_65"
        android:layout_marginRight="@dimen/base_dimen_65"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商家地址："
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />

        <TextView
            android:id="@+id/tv_share_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_share_shop_qrcode"
        android:layout_width="@dimen/base_dimen_180"
        android:layout_height="@dimen/base_dimen_180"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_30"
        android:background="@drawable/defaultseekservice" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base_dimen_23"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="长按扫描二维码"
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="进入店铺"
            android:textColor="@color/hui"
            android:textSize="@dimen/base_dimen_22" />
    </LinearLayout>
</LinearLayout>