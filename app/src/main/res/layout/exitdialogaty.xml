<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base_dimen_600"
    android:layout_height="@dimen/base_dimen_220"
    android:background="@drawable/exit_bg"
    android:orientation="vertical"
    android:id="@+id/lin_bgexit" >

    <LinearLayout
        android:id="@+id/re_exit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_80"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/base_dimen_39"
            android:layout_height="@dimen/base_dimen_33"
            android:layout_centerVertical="true"
            android:background="@drawable/exit_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_40"
            android:text="@string/exit_user"
            android:textSize="@dimen/base_dimen_30"
            android:textColor="@color/white_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/re_exit_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base_dimen_80"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/base_dimen_34"
            android:layout_height="@dimen/base_dimen_35"
            android:layout_centerVertical="true"
            android:background="@drawable/exit_app" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_40"
            android:text="@string/exit_app"
            android:textSize="@dimen/base_dimen_30"
            android:textColor="@color/white_text" />
    </LinearLayout>

</LinearLayout>