<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_95"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20">

        <TextView
            android:id="@+id/tv_arountshop_listitme_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="朝阳区"
            android:textSize="@dimen/base_dimen_30"
            android:textColor="@drawable/store_textcolor_itemgroup" />

        <TextView
            android:id="@+id/tv_arountshop_listitme_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="500m"
            android:textSize="@dimen/base_dimen_30"
            android:textColor="@drawable/store_textcolor_itemgroup" />
    </RelativeLayout>

</LinearLayout>