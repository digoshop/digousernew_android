<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_10"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:id="@+id/re_home_seekshop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_65"
        android:background="#ffffff"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_home_zsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="生活乐悠悠"
            android:textColor="#bb4fee"
            android:textSize="@dimen/base_dimen_26" />

        <ImageView
            android:id="@+id/iv_icon_zsp"
            android:layout_width="@dimen/base_dimen_34"
            android:layout_height="@dimen/base_dimen_34"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:layout_toLeftOf="@id/tv_home_zsp"
            android:background="@drawable/l_lifetwo" />
    </RelativeLayout>

    <com.digoshop.app.common.widget.MyGridView
        android:id="@+id/home_gv_findshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:cacheColorHint="#00000000"
        android:horizontalSpacing="@dimen/base_dimen_20"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/base_dimen_20" />

</LinearLayout>