<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base_dimen_20"
        android:paddingRight="@dimen/base_dimen_20"
        android:paddingTop="@dimen/base_dimen_20">

        <TextView
            android:id="@+id/tv_gifttime_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换时间"
            android:textColor="#C4C4C4"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/tv_gifttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_40"
            android:layout_toRightOf="@id/tv_gifttime_type"
            android:text="2016.06.25 12:18:36"
            android:textColor="#777777"
            android:textSize="@dimen/base_dimen_30" />

        <TextView
            android:id="@+id/tv_giftstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="已领取"
            android:textColor="#F39800"
            android:textSize="@dimen/base_dimen_30" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:orientation="horizontal"
        android:padding="@dimen/base_dimen_20">

        <ImageView
            android:id="@+id/iv_bag"
            android:layout_width="@dimen/base_dimen_220"
            android:layout_height="@dimen/base_dimen_220"
            android:scaleType="fitXY"
            android:src="@drawable/kcx_001" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textColor="#000000"
                android:textSize="@dimen/base_dimen_30" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_epg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消耗:积分"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/base_dimen_30" />

                <TextView
                    android:id="@+id/tv_ppr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_40"
                    android:text="价值: "
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/base_dimen_30" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_10">

                <TextView
                    android:id="@+id/tv_epp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认购金额： "
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/base_dimen_30" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_epp"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:text="类型： "
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="@dimen/base_dimen_30" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>