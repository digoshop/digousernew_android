<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingTop="@dimen/base_dimen_20"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/id_stickynavlayout_innerscrollview"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/base_dimen_100"
        android:scrollbars="none"
        android:background="@color/transparent"
        android:layout_height="match_parent">

        <com.digoshop.app.module.looksales.view.MyListView
            android:id="@+id/lv_shopmessage_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#f5f5f5"
            android:dividerHeight="@dimen/base_dimen_20"
            android:listSelector="@android:color/transparent" />

    </ScrollView>

    <RelativeLayout
        android:id="@+id/re_nocouponlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_shopnomsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="@color/black"
            android:textSize="@dimen/base_dimen_30" />
    </RelativeLayout>
</LinearLayout>